{{!-- mensajes de error --}}
{{#if error }}
    <div class="toast alert alert-danger bg-danger align-items-center position-absolute bottom-0 end-0" role="alert" aria-live="assertive" aria-atomic="true">
    <div class="d-flex">
        <div class="toast-body">
        <p class="text-light alert-mensajes"><strong>{{ error }}</strong></p>
        </div>
        <button type="button" class="btn-close btn-alerta me-2 m-auto" data-bs-dismiss="toast" aria-label="Close"></button>
    </div>
</div>
{{/if}}

{{!-- mensajes correctos --}}

{{#if satisfactorio }}
    <div class="toast alert alert-success bg-success align-items-center position-absolute bottom-0 end-0" role="alert" aria-live="assertive" aria-atomic="true">
    <div class="d-flex">
        <div class="toast-body">
        <p class="text-light alert-mensajes"><strong>{{ satisfactorio }}</strong></p>
        </div>
        <button type="button" class="btn-close btn-alerta me-2 m-auto" data-bs-dismiss="toast" aria-label="Close"></button>
    </div>
</div>
{{/if}}




